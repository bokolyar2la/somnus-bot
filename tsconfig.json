{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],
		"lib": ["ES2020", "DOM"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
